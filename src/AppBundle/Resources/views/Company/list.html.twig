{% extends '@App/layout.html.twig' %}

{% block title %}Список компании{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="#">Главная</a></li>
        <li class="active">Список компании</li>
        <div style="float: right" class="btn-add">
            <a href="{{ path('company_add') }}" class="btn btn-primary">Добавить</a> <span class="divider"></span>
        </div>
    </ol>

{% endblock %}

{% block content %}
    <table class="table table-hover table-custom">
        <tr>
            <th>ID</th>
            <th>Название компании</th>
            <th>Контактное лицо</th>
            <th>Должность</th>
            <th>Телефон</th>
            <th>E-mail</th>
            <th></th>
        </tr>
        {% for item in pagination %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.title }}</td>
                <td>{{ item.contactPerson }}</td>
                <td>{{ item.contactPost }}</td>
                <td>{{ item.contactPhone }}</td>
                <td>{{ item.contactEmail }}</td>
                <td class="setting">
                    <a href="{{ path('company_edit', {'id' : item.id} ) }}"><button class="btn-xs btn-primary"><span class="glyphicon glyphicon-pencil"></span> Просмотр / Редактировать</button></a>

                    <button class="btn-xs btn-danger remove" data-toggle="modal" data-target="#confirm-delete" data-href="{{ path('company_remove', {'id' : item.id} ) }}" ><span class="glyphicon glyphicon-remove"></span> Удалить</button>
                </td>
            </tr>
        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}